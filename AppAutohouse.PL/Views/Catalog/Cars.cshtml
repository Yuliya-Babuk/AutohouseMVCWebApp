@using MVCAppAutohouse.DAL.Entities;

@model IEnumerable<Car>

@{
    ViewData["Title"] = "Car catalog";
    Layout = "_Layout";
}
<div class="mb-3">
    <a class="btn btn-primary" href="/catalog/AddCar" role="button">Add new car</a>

</div>

<table class="table table-striped table-success table-hover table-bordered ">
    
    <thead>
       
            <tr class="table-warning">
                <th>    ID</th>
                <th>    Brand</th>
                <th>    Model</th>
                <th>    Engine Type</th>
                <th>    Year</th>
                <th></th>
            </tr>
       
<thead>
            
            @foreach (var item in @Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Brand.Name</td>
                    <td>@item.Model</td>
                    <td>@item.TypeEngine</td>
                    <th>@item.Year</th>

                    <td>
                        <ul class="nav nav-pills px-3">
                            <li class="nav-item px-2">

                                <form action="/Catalog/DeleteCar" method="post">
                                    <input type="hidden" name="Id" value="@item.Id" />
                                    <button type="submit" class="btn btn-primary mb-3">Delete</button>
                                </form>
                            </li>
                            <li class="nav-item px-2">
                                <form action="/Catalog/GetInfoById" method="get">
                                    <input type="hidden" name="Id" value="@item.Id" />
                                    <button type="submit" class="btn btn-primary mb-3">Info</button>
                                </form>
                            </li>
                            <li class="nav-item px-2">
                                <form action="/Catalog/Update" method="get">
                                    <input type="hidden" name="Id" value="@item.Id" />
                                    <button type="submit" class="btn btn-primary mb-3">Update</button>
                                </form>
                            </li>
                        </ul>
                    </td>
                </tr>

            }   
</table>


