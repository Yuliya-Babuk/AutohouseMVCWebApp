@using AppAutohouse.PL.Models;

@model IEnumerable<CarModel>

@{
    ViewData["Title"] = "Car catalog";
   
}
<div class="mb-3">
    <form action="/catalog/UpdateOrCreate" method="get">
        <input type="hidden" value="0">
        <button type="submit" class="btn btn-primary">Add new car</button>
    </form>
</div>

<table class="table table-striped table-success table-bordered table-hover">
    <thead>

        <tr class="table-warning">
            <th>    Brand</th>
            <th>    Model</th>
            <th>    Engine Type</th>
            <th>    Engine Size, L</th>
            <th>    Year</th>
            <th></th>
        </tr>

    <thead>

        @foreach (var item in @Model)
        {
        <tr>

            <td>@item.Brand.Name</td>
            <td>@item.Model</td>
            <td>@item.EngineType</td>
            <td>@item.EngineSize</td>
            <th>@item.Year</th>

            <td>
                <ul class="nav nav-pills px-3">
                    <li class="nav-item px-2">

                        <form action="/Catalog/DeleteCar" method="post">
                            <input type="hidden" name="Id" value="@item.Id" />
                            <button type="submit" class="btn btn-primary mb-3">Delete</button>
                        </form>
                    </li>
                    <li class="nav-item px-2">
                        <form action="/Catalog/GetInfoById" method="get">
                            <input type="hidden" name="Id" value="@item.Id" />
                            <button type="submit" class="btn btn-primary mb-3">Info</button>
                        </form>
                    </li>
                    <li class="nav-item px-2">
                        <form action="/Catalog/UpdateOrCreate" method="get">
                            <input type="hidden" name="Id" value="@item.Id" />
                            <button type="submit" class="btn btn-primary mb-3">Update</button>
                        </form>
                    </li>
                </ul>
            </td>
        </tr>

        }
</table>


