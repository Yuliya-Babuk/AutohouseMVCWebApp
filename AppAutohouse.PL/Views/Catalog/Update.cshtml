@using MVCAppAutohouse.DAL.Entities;

@model Car

@{

    Layout = "_Layout";
}

<form action="/Catalog/Update" method="post">

    <div class="mb-3 row">
        <label for="ID" class="col-sm-2 col-form-label">ID</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="ID" value="@Model.Id" readonly />
        </div>
    </div>
    <div class="mb-3 row">
        <label for="Name" class="col-sm-2 col-form-label">Brand</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="Brand" value="@Model.Brand.Name" />
        </div>
    </div>
    <div class="mb-3 row">
        <label for="Model" class="col-sm-2 col-form-label">Model</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="Model" value="@Model.Model">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="TypeEngine" class="col-sm-2 col-form-label">Engine Type</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="TypeEngine" value="@Model.TypeEngine">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="TypeEngine" class="col-sm-2 col-form-label">Engine Size</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="EngineSize" value="@Model.EngineSize">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="TypeEngine" class="col-sm-2 col-form-label">Year</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="Year" value="@Model.Year">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="TypeEngine" class="col-sm-2 col-form-label">Price</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="Price" value="@Model.Price">
        </div>
    </div>
    <button type="submit" class="btn btn-primary mb-3">Update</button>
</form>



