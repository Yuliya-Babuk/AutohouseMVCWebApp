@using MVCAppAutohouse.DAL.Entities;

@model IEnumerable<Car>

@{
    ViewData["Title"] = "Car info";
    Layout = "_Layout";
}

<table class="table table-striped table-success table table-hover table table-bordered">
    <thead>
        <tr class="table-warning">
            <th>    ID</th>
            <th>    Brand</th>
            <th>    Model</th>
            <th>    Engine Type</th>
            <th>    Engine Size, L</th>
            <th>    Year</th>
            <th>    Price, $</th>
        </tr>
    </thead>


    @foreach (var item in @Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Brand.Name</td>
            <td>@item.Model</td>
            <td>@item.TypeEngine</td>
            <td>@item.EngineSize</td>
            <td>@item.Year</td>
            <td>@item.Price</td>
        </tr>
}
</table>

