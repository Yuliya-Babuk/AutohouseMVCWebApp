@using AppAutohouse.DAL.Entities;

@model Car

@{
    ViewData["Title"] = "Car info";

}
<div class="container">    
    <table class="table table-striped table-success table table-hover table table-bordered align-content-center">
        <thead>
            <tr class="table-warning">

                <th style="width:200px">    Photo</th>
                <th>    Brand</th>
                <th>@nameof(Model.Model)</th>
                <th>    Engine Type</th>
                <th style="width:200px">    Engine Size, L</th>
                <th>@nameof(Model.Year)</th>
                <th>    Price, $</th>

            </tr>
        </thead>



        <tr style="vertical-align:middle">
            <th style="text-align:center">
                @if (Model.Photo != null)
                {
                    <img style="width:130px; height:80px;" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Photo))" class="img-thumbnail" alt="..." />
                }
            </th>
            <td>@Model.Brand.Name</td>
            <td>@Model.Model</td>
            <td>@Model.EngineType</td>
            <td>@String.Format("{0:.0}", Model.EngineSize)</td>
            <td>@Model.Year</td>
            <td>@Model.Price</td>
        </tr>
    </table>
</div>
