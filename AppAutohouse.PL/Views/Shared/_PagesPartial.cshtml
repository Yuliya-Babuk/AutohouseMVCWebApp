@using AppAutohouse.PL.Models
@model PagesModel

@if (Model.PagesAmount > 1)
{
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-end">
        @{
            if ((Model.CurrentPage - 1) == 0)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" href="@Model.Url/@(Model.CurrentPage - 1)">Previous</a>
                </li>
            }
        }
        @for (int i = 1; i < Model.PagesAmount + 1; i++)
        {
            <li class="page-item"><a class="page-link" href="@Model.Url/@i">@i</a></li>
        }
        @{
            if ((Model.CurrentPage + 1) > Model.PagesAmount)
            {
                <li class="page-item disabled">
                    <a class="page-link " href="">Next</a>
                </li>
            }
            else

            {
                <li class="page-item "><a class="page-link" href="@Model.Url/@(Model.CurrentPage + 1)">Next</a></li>
            }
        }
    </ul>
</nav>
 }


